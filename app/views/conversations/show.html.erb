<main data-controller="messages">
  <section>
    <turbo-frame id="messages" data-controller="dong">
      <% @messages.each do |message| %>
        <article id="<%= dom_id(message) %>" class="<%= message.role %>-message">
          <%= raw message.content %>
        </article>
      <% end %>
    </turbo-frame>
  </section>

  <turbo-frame id="new_message">
    <%= render 'message_form' %>
  </turbo-frame>
</main>
